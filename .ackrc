# adds a bunch of types to ruby
--type-add=ruby=.haml,.rake,.rsel,.feature,.php,.sass
# adds rails types to html
--type-add=html=.haml,.html.erb,.rhtml
# adds coffeescript
--type-set=coffee=.coffee
# adds sass
--type-set=sass=.sass,.scss
# adds clojure
--type-set=clojure=.clj
# remove test/coverage from searched directories
--ignore-dir=coverage
